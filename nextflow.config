
params {
    expr = "expr_mat.tsv"
    TFs = "allTFs_hg38.txt"
    motif_tf_annotation = "resources/motifs-v9-nr.hgnc-m0.001-o0.0.tbl"
    motif_dbs = "resources/hg19*mc9nr.feather"
    track_tf_annotation = ""
    track_dbs = ""
    output = "pyscenic_output.loom"
    outdir = "."
    parallel_framework = "dask"
    grn = "grnboost2"
    threads = 6
    // parameters for reading loom files:
    cell_id_attribute = "CellID"
    gene_attribute = "Gene"
    ctx_mask_dropouts = 'yes'
    nb_runs = 1
    // latest pySCENIC version tag
    tag = "0.9.9"
    // for the qsub profile, the name of the account:
    qsubaccount = ""
    qsub_walltime_hours = 24
}

profiles {

    standard {
        process.executor = 'local'
        maxForks = 1
    }
    qsub {
        process.executor = 'pbs'
    }
    docker {
        docker.enabled = true
        process.container = 'aertslab/pyscenic:'+params.tag
    }
    singularity {
        singularity.enabled = true
        process.container = '/ddn1/vol1/staging/leuven/stg_00002/lcb/dwmax/software/containers/pyscenic-0.9.16-1.sif'
        singularity.autoMounts = true
        singularity.runOptions = '-B /staging/leuven/res_00001/:/staging/leuven/res_00001/'
    }
    example {
        includeConfig 'example.config'
    }

}

// 'shub://aertslab/pySCENIC:'+params.tag
