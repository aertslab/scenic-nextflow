
profiles {

    standard {
        process.executor = 'local'
    }
    docker {
        process.executor = 'local'
        docker.enabled = 'true'
        process.container = 'pyscenic:latest'
    }
    singularity {
        process.executor = 'local'
        singularity.enabled = 'true'
        //singularity.cacheDir = '/media/data/chris/docker/'
        process.container = 'shub://cflerin/pySCENIC:latest'
        singularity.autoMounts = true
    }

}

